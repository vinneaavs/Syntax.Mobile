<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Syntax.Mobile.Views.LoginPage"
             xmlns:local="clr-namespace:Syntax.Mobile.Models"
             Shell.NavBarIsVisible="False">    
    <ContentPage.BindingContext>
        <local:Login/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Label Text="Email" FontSize="Large"/>
            <Entry x:Name="EmailEntry" Text="{Binding Login.Email, Mode=TwoWay}"/>
            <Label Text="Password" FontSize="Large"/>
            <Entry x:Name="PasswordEntry" Text="{Binding Login.Password, Mode=TwoWay}" IsPassword="True"/>
            <Button VerticalOptions="Center" Text="Login" Command="{Binding LoginCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
